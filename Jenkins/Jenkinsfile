pipeline {
    agent {
        label "python-kubagent"
    }
    stages {
        stage('Build python project!') {
            steps {
                container('kaniko') {
                    echo 'Kaniko'
                    sh '''
                        ls -lrt /kaniko
                        ls -lrt /home/jenkins/agent
                        cat `pwd`@tmp/dura*/script.sh
                    '''
                    sh '''
                      /kaniko/executer --context `pwd`/docker --destination ralphsmeets/mijnkia-test:0.1
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}