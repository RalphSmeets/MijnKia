pipeline {
    agent {  label "python-kubagent" }

    stages {
        stage('Build python project!') {
            container('kaniko') {
                stage('Build docker container') {
                    sh '''
                        /kaniko/executer --context `pwd`/docker --destination ralphseets/mijnkia-test:0.1
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}