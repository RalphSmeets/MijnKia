pipeline {
    agent {
        kubernetes {
            inheritFrom "python-kubagent"
        }
    }
    stages {
        stage('Build container image using kaniko and push to docker') {
            environment {
                PATH = "/busybox:/kaniko:$PATH"
            }
            steps {
                container(name: 'kaniko', shell: '/busybox/sh') {

                    sh '''#!/busybox/sh
            ls -lrt
            /kaniko/executor --context `pwd` --dockerfile docker/Dockerfile --destination ralphsmeets/mijn-kia-app:1.18.0
          '''
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}