pipeline {
    agent {
        kubernetes {
            inheritFrom "python-kubagent"
        }
    }
    stages {
        stage('Build with Kaniko') {
            environment {
                PATH = "/busybox:/kaniko:$PATH"
            }
            steps {
                container(name: 'kaniko', shell: '/busybox/sh') {

                    sh '''#!/busybox/sh
            /kaniko/executor --context `pwd` --verbosity debug --destination ralphsmeets/mijnkia-kaniko:0.1.0
          '''
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}