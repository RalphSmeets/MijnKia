pipeline {
    agent {  label "python-kubagent" }

    stages {
        stage('Build python project!') {
            steps {
                container(name: 'kaniko', shell: '/busybox/sh' ) {
                    echo 'Kaniko'
                    sh '''
                        /kaniko/executer --context `pwd`/docker --destination ralphsmeets/mijnkia-test:0.1
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}